{
	// Required
	"manifest_version": 2,
	"name": "Image Downloader",
	"version": "1.1",

	"background": {
		"page": "background.html",
		"persistent": false
	},

	"content_scripts": [{
			"all_frames": true,
			"js": ["jquery.js", "content.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_end"
		}
	],
	
	"browser_action": {
      "default_popup": "popup.html"
   },

	"permissions": ["<all_urls>", "tabs", "downloads", "downloads.open"]
}
